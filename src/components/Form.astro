---
import { API_ROUTES, ROUTES_PATH } from "@/const";
import EmailIcon from "@/icons/auth/Email.astro";
import PasswordIcon from "@/icons/auth/Password.astro";

interface Props {
  URL: string;
}

const { URL } = Astro.props;
const URLForm = URL.includes(ROUTES_PATH.LOGIN)
  ? API_ROUTES.LOGIN
  : API_ROUTES.SIGNUP;
---

<article class="flex flex-col">
  <form
    action={URLForm.toString()}
    method="POST"
    class="flex flex-col justify-center relative"
  >
    <div class="flex flex-col gap-8">
      <div class="relative">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="musicapp@gmail.com"
          class="w-[22rem] h-[2.7rem] pl-12 rounded-lg bg-gray-600/20 border-gray-700 font-medium outline-none text-[#aaa] transition-all hover:bg-gray-500/20 placeholder:text-[#777]"
          required
        />
        <div
          class="absolute inset-y-0 left-0 pl-3
    flex items-center
    pointer-events-none"
        >
          <EmailIcon color="#666" />
        </div>
      </div>

      <div class="relative">
        <input
          type="password"
          name="password"
          id="password"
          placeholder="************"
          class="w-[22rem] h-[2.7rem] pl-12 rounded-lg bg-gray-600/20 border-gray-700 font-medium outline-none text-[#aaa] transition-all hover:bg-gray-500/20 placeholder:text-[#777]"
          required
        />
        <div
          class="absolute inset-y-0 left-0 pl-3
    flex items-center
    pointer-events-none"
        >
          <PasswordIcon color="#666" />
        </div>
      </div>
    </div>
    {
      URL === "/login" ? (
        <p class="my-2 text-right text-sm text-[#26AB3C] opacity-85 cursor-pointer hover:text-[rgb(82,185,100)] transition duration-200">
          ¿Has olvidado tu contraseña?
        </p>
      ) : null
    }
    <button
      type="submit"
      class="mt-12 bg-[#26AB3C] rounded-lg p-[10px] border-none font-semibold transition duration-200 hover:bg-[#40b954]"
    >
      {URL.includes("/login") ? "Inicia sesión" : "Crear cuenta"}
    </button>
    <p class="mx-auto py-2 text-gray-300">- O -</p>
  </form>
  <button
    class="px-4 py-2 border flex justify-center items-center gap-2 border-slate-200 dark:border-slate-700 rounded-lg text-slate-700 dark:text-slate-200 hover:border-slate-500 hover:text-slate-300 hover:shadow transition duration-150"
  >
    <img
      class="w-6 h-6"
      src="https://www.svgrepo.com/show/475656/google-color.svg"
      alt="google logo"
      loading="lazy"
    />
    <span>
      {
        URL.includes("/login")
          ? "Inicia sesión con Google"
          : "Crear cuenta con Google"
      }
    </span>
  </button>
</article>
