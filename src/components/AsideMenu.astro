---
import SideMenuItem from "./SideMenuItem.astro";
import HomeIcon from "../icons/Home.astro";
import LogoutIcon from "../icons/dashboard/Logout.astro";
import DocsIcon from "@/icons/dashboard/DocsIcon.astro";
import SettingsIcon from "@/icons/dashboard/SettingsIcon.astro";
import LibraryIcon from "@/icons/dashboard/LibraryIcon.astro";
import { ROUTES_PATH } from "@/const";
---

<nav class="w-full h-full text-[15px] flex flex-col">
  <div class="mt-4 mb-5 px-4">
    <ul class="flex flex-col gap-2">
      <SideMenuItem
        href={ROUTES_PATH.DASHBOARD}
        className="gap-4 flex text-white hover:text-gray-100 hover:bg-[#3c47559a] rounded-md items-center py-3 px-4 transition duration-150"
      >
        <HomeIcon />
        Inicio
      </SideMenuItem>

      <SideMenuItem
        href={""}
        className="gap-4 flex text-white hover:text-gray-100 hover:bg-[#3c475579] rounded-md items-center py-3 px-4 transition duration-150"
      >
        <DocsIcon className="w-7 text-white" />
        Partituras
      </SideMenuItem>
    </ul>
  </div>
  <div class="w-10/12 mx-auto my-4 border-t border-gray-700/65"></div>
  <div class="mt-3 px-4 flex-1">
    <ul>
      <SideMenuItem
        href={ROUTES_PATH.LIBRARY}
        className="gap-3 flex text-white hover:text-gray-100 hover:bg-[#3c47559a] rounded-md items-center py-3 px-4 transition duration-150"
      >
        <LibraryIcon className="w-7 text-white" />
        Tu biblioteca
      </SideMenuItem>

      <!-- {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)} -->
    </ul>
  </div>
  <div class="mt-10 mb-8 px-4">
    <ul class="flex flex-col gap-2">
      <SideMenuItem
        href={""}
        className="gap-2 flex text-white hover:text-gray-100 hover:bg-[#3c47559a] rounded-md items-center py-3 px-4 transition duration-150"
      >
        <SettingsIcon className="w-[34px] text-white" />
        Ajustes
      </SideMenuItem>
    </ul>
  </div>

  <div class="px-4 mb-8">
        <SideMenuItem
          href={"/api/auth/logout"}
          className="gap-3 flex text-red-500 hover:text-red-600 hover:bg-red-500/15 rounded-md items-center py-3 px-4 transition duration-150"
        >
          <LogoutIcon color="#ef4444" className="w-7" />
          Logout
        </SideMenuItem>
  </div>
</nav>
