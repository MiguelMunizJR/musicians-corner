---
import DownloadIcon from "@/icons/dashboard/DownloadIcon.astro";
import MenuScore from "@/icons/dashboard/MenuScore.astro";
import MusicCategory from "@/icons/dashboard/MusicCategory.astro";
import UserIcon from "@/icons/dashboard/UserIcon.astro";

interface Props {
  className?: string;
  title?: string;
  author?: string;
  user?: string;
  downloads?: string;
  scoreImage?: string;
}

const { className, title, author, user, downloads, scoreImage } = Astro.props;
---

<article class={`w-full min-h-[18rem] rounded-xl bg-[#1a1e2c] ${className}`}>
  <div class="w-full relative">
    <img
      src={scoreImage ? scoreImage : "/images/score.jpg"}
      alt="score-img"
      class="w-full h-full"
      loading="lazy"
    />
    <div
      class="p-2 absolute right-3 bottom-2 bg-[#1a1e2c] hover:bg-[#2e3342] transition-all rounded-full cursor-pointer"
    >
      <MenuScore />
    </div>
  </div>
  <div class="p-3">
    <div class="w-full flex flex-col">
      <h3 class="text-lg">{title}</h3>
      <div class="w-full flex justify-between items-center">
        <div class="flex gap-1 items-center">
          <MusicCategory className="w-5 h-5 text-[#26ab3c]" />
          <p class="font-light text-sm text-gray-200/60">{author}</p>
        </div>
        <div class="flex flex-col justify-center items-center">
          <DownloadIcon className="w-6 h-6" />
          <span class="text-[#26ab3c] text-sm">{downloads}</span>
        </div>
      </div>
    </div>
    <div class="flex items-center gap-1">
      <UserIcon className="" />
      <p class="font-light text-sm text-gray-200/60">{user}</p>
    </div>
  </div>
</article>
