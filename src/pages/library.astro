---
import AppLayout from "@/layouts/AppLayout.astro";
import Notification from "@/components/Notification.astro";
import RecordingIcon from "@/icons/dashboard/Recording.astro";
import { supabase } from "@/lib/supabase";
import AvatarCard from "@/components/AvatarCard.astro";
import SearchInput from "@/components/SearchInput.astro";
import Greeting from "@/components/Greeting.tsx";
import { playlists } from "@/lib/data";
import PlayListItemCard from "@/components/PlayListItemCard.astro";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/auth/login");
}

const { data, error } = await supabase.auth.setSession({
  refresh_token: refreshToken?.value || "",
  access_token: accessToken?.value || "",
});

if (error) {
  cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });
}
---

<AppLayout title="">
  <section class="w-full h-screen px-10 flex bg-[#10141d]">
    <main class="flex-1">
      <header class="w-3/4 h-max mt-6 flex gap-8">
        <SearchInput
          placeholder="Black and yellow - Wiz Khalifa, Dream on - Aerosmith ..."
        />

        <div
          class="w-52 rounded-md bg-red-500/70 hover:bg-red-500/85 flex justify-center items-center transition-all gap-3 cursor-pointer"
        >
          <div
            class="w-7 h-7 ring-1 ring-white rounded-full flex justify-center items-center"
          >
            <RecordingIcon className="w-6" />
          </div>
          <h6>Nueva nota</h6>
        </div>
      </header>
      <article>
        <Greeting className="mt-12" />
        <div>
            <!-- HERO LIBRARY GALLERY -->
        </div>
        <div class="flex flex-wrap mt-8 gap-4">
          {
            playlists.map((playlist) => (
              <PlayListItemCard playlist={playlist} />
            ))
          }
        </div>
      </article>
    </main>
    <aside class="w-[28rem] flex flex-row items-start">
      <header class="w-full flex justify-end items-center gap-3 -mt-3">
        <div>
          <Notification className="w-7 h-7 relative" />
        </div>
        <AvatarCard className="" data={data.user?.email} />
      </header>
    </aside>

    <style>
      section {
        background-color: #10141d;
        background-image: url("https://imagedelivery.net/cD6Iwz1G-Kzv3zO8zmxwnA/32df3be3-ace5-488d-a1b6-30f8ef794200/public");
        background-size: 70%;
        background-position: 2rem;
      }
    </style>
  </section>
</AppLayout>
