---
import AppLayout from "@/layouts/AppLayout.astro";
import SearchInput from "@/components/SearchInput.astro";
import AsideApp from "@/components/AsideApp.astro";
import DashboardPage from "@/components/pages/Dashboard.astro";

import { supabase } from "@/lib/supabase";
const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/auth/login");
}

const { data, error } = await supabase.auth.setSession({
  refresh_token: refreshToken?.value || "",
  access_token: accessToken?.value || "",
});

if (error) {
  cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });
}
---

<AppLayout title="Dashboard - Musician's Corner">
  <section class="w-full px-10 mt-4 flex gap-10">
    <main class="w-11/12 flex flex-col">
      <header class="w-full h-max mt-4 flex">
        <SearchInput className="w-[50%]" />
      </header>
      <DashboardPage />
    </main>
   <AsideApp />
  </section>
</AppLayout>
